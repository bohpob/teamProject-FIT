            <!--                    android:orientation="horizontal"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:layout_margin="20dp">-->
            <!--                <TextView-->
            <!--                        android:text="Groups:"-->
            <!--                        android:textSize="18sp"-->
            <!--                        android:textColor="#5917E1"-->
            <!--                        android:layout_width="wrap_content"-->
            <!--                        android:layout_height="wrap_content"-->
            <!--                        android:id="@+id/profile_groups_textview"-->
            <!--                        android:layout_weight="1"/>-->
            <!--                <TextView-->
            <!--                        android:text="12"-->
            <!--                        android:layout_width="wrap_content"-->
            <!--                        android:layout_height="wrap_content"-->
            <!--                        android:id="@+id/profile_groups_count_textview"-->
            <!--                        android:textSize="18sp"-->
            <!--                        android:textColor="#5B5B5B"-->
            <!--                        android:textAlignment="viewEnd"-->
            <!--                        android:layout_weight="1"/>-->
            <!--            </LinearLayout>-->

        </LinearLayout>
        <Button
                android:text="Edit Profile"
                android:layout_width="0dp"
                android:layout_height="50dp" android:id="@+id/button"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:background="@drawable/auth_button_bg"
                android:textSize="18sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>